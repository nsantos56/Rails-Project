<!doctype html>
<html lang="en">
  <head>
          <meta charset="UTF-8" />
          <link rel="stylesheet" type="text/css" href="clearstyles.css" />
          <title>Clear!</title>
  </head>
  <body>
    <section id= "container">
            <section id="maincontent">
              <table>
                <tbody>
                  <% @products.each do |product| %>
                    <tr>
                      <p>
                        <strong><%= link_to product.title, product %></strong>
                      </p>
                      <p>
                        <%= product.description %>
                      </p>
                      <p>
                        <strong>Price:</strong>
                          <%= product.price %>
                      </p>
                      <p>
                        <strong>Stock quantity:</strong>
                        <%= product.stock_quantity %>
                      </p>
                      <br>
                      <%= link_to 'edit', edit_product_path(product) %>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </section>
            <aside><%= link_to 'Categories' , categories_path%></aside>
            <footer></footer>
    </section>
  </body>
</html>
